                label.form-switch(for='hoursegment')
                    input(type='checkbox' id='hoursegment' rv-checked='config.hourSegment')
                    i.form-icon
                    span ${{ index.colorconfig.hoursegment }}$ 

            .column.col-6.bglightsettings(rv-if='config.hourSegment')

                .form-group 
                    .col-4
                        label.form-label(for='hoursegmentcolor') ${{ index.day }}$ 
                    .col-8
                        input.form-input(type='color', id='hoursegmentcolor' rv-value='config.hourSegmentColor')
                
            .column.col-6.bglightsettings(rv-if='config.hourSegment')

                .form-group 
