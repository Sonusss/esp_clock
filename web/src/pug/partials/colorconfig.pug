                        label.form-label(for='hourquartercolor') ${{ index.day }}$ 
                    .col-8
                        input.form-input(type='color', id='hourquartercolor' rv-value='config.hourQuarterColor')
                
            .column.col-6.bglightsettings(rv-if='config.hourQuarter')

                .form-group 
                    .col-4
                        label.form-label(for='hourquartercolordimmed') ${{ index.night }}$ 
                    .col-8
                        input.form-input(type='color', id='hourquartercolordimmed' rv-value='config.hourQuarterColorDimmed')

    .divider
    
    fieldset.form-horizontal
        .form-group 
