.contenttab#ledconfig
    h2 ${{ index.ledconfig.title }}$
    div ${{ index.ledconfig.description }}$

    fieldset.form-horizontal
        .form-group 
            .col-12
                label.form-switch(for='blendcolors')
                    input(type="checkbox" id="blendcolors")
                    i.form-icon
                    span ${{ index.ledconfig.blendcolors }}$ 

    fieldset.form-horizontal
        .form-group 
            .col-12
                label.form-switch(for='fluidmotion')
                    input(type="checkbox" id="fluidmotion")
                    i.form-icon
                    span ${{ index.ledconfig.fluidmotion }}$ 

    fieldset.form-horizontal
        .form-group 
            .col-12
                label.form-switch(for='bglight')
                    input(type="checkbox" id="bglight")
                    i.form-icon
                    span ${{ index.ledconfig.backlight.enable }}$ 

            .column.col-6.bglightsettings

                .form-group 
                    .col-3
                        label.form-label(for='bgcolor') ${{ index.ledconfig.backlight.day }}$ 
                    .col-9
                        input.form-input(type='color', id='bgcolor')
                
            .column.col-6.bglightsettings

                .form-group 
                    .col-3
                        label.form-label(for='bgcolor') ${{ index.ledconfig.backlight.night }}$ 
                    .col-9
                        input.form-input(type='color', id='bgcolor')