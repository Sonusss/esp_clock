.modal#modalfirmware
    a.modal-overlay#mfwclose
    .modal-container
        .modal-header
            .modal-title.h5 #{$i18n.sysconfig.firmware.title}
        .modal-body
            .content
                div #{$i18n.sysconfig.firmware.description}
                form.form-horizontal(method='POST', action='/update', enctype='multipart/form-data')
                    .form-group
                        .col-2
                            label.form-label(for='firmware') #{$i18n.sysconfig.firmware.update}
                        .col-7
                            input.form-input(type='file', accept='.bin', name='firmware') 
                        .col-3
                            button.btn.btn-lg.mx-2(type='submit') #{$i18n.sysconfig.firmware.submit}
        .modal-footer
            #fwinfo